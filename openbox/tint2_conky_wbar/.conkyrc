background no
font Zekton:size=6
xftfont Zekton:size=6
use_xft yes
xftalpha 1.0
update_interval 1.0
total_run_times 0

own_window no
own_window_transparent yes
own_window_type desktop
own_window_argb_visual yes
own_window_argb_value 120
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager


double_buffer yes
draw_shades yes
draw_outline no
draw_borders yes
draw_graph_borders yes
minimum_size 99
maximum_width 160
default_color black
default_shade_color black
default_outline_color white
alignment top_left
gap_x 5
gap_y 40
no_buffers yes
cpu_avg_samples 2
override_utf8_locale yes
uppercase no # set to yes if you want all text to be in uppercase
use_spacer yes
 
 TEXT
${font sans-serif:bold:size=8}SYSTEM ${hr 2}
${font sans-serif:normal:size=8}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime
File System: $alignr${fs_type}

 CPU I  (${cpu cpu1}%) ${alignc}${cpubar 4 cpu1}
 CPU II (${cpu cpu2}%) ${alignc}${cpubar 4 cpu2}
 ${cpugraph cpu1 25,90} ${acpitemp}^0C ${cpugraph cpu2 25,90}
 ${hr 1 }
 RAM ${alignr}$mem / $memmax ($memperc%)
 ${membar 4}
 SWAP ${alignr}$swap / $swapmax ($swapperc%)
 ${swapbar 4}
 ${hr 1 }
 Highest CPU $alignr CPU% MEM%
 ${top name 1}$alignr${top cpu 1}${top mem 1}
 ${top name 2}$alignr${top cpu 2}${top mem 2}
 ${top name 3}$alignr${top cpu 3}${top mem 3}
 ${top name 4}$alignr${top cpu 4}${top mem 4}
  
  Highest MEM $alignr CPU% MEM%
  ${top_mem name 1}$alignr${top_mem cpu 1}${top_mem mem 1}
  ${top_mem name 2}$alignr${top_mem cpu 2}${top_mem mem 2}
  ${top_mem name 3}$alignr${top_mem cpu 3}${top_mem mem 3}
  ${top_mem name 4}$alignr${top_mem cpu 4}${top_mem mem 4}
  ${hr 1}
  /: $alignr ${fs_used /} / ${fs_size /} ($alignr${fs_free_perc /}%)
  ${fs_bar 4 /}
  /home: $alignr ${fs_used /home/} / ${fs_size /home} ($alignr${fs_free_perc /home}%)
  ${fs_bar 4 /home}
  ${hr 1}
  Down ${downspeed ath0}/s ${alignr}Up ${upspeed enp2s0f5}/s
  ${downspeedgraph ath0 25,85} Ethernet ${upspeedgraph ath0 25,85}
  Total ${totaldown ath0} ${alignr}Total ${totalup ath0}
   
   Down ${downspeed wlan0}/s ${alignr}Up ${upspeed wlan0}/s
   ${downspeedgraph wlan0 25,95} Wi-Fi ${alignr}${upspeedgraph wlan0 25,95}
   Total ${totaldown wlan0} ${alignr}Total ${totalup wlan0}
   
   N E T W O R K${alignr}${downspeed wlan0} I/O
   ${downspeedgraph wlan0}
   in/out ${alignr}${totaldown wlan0}/${totalup wlan0}
   lan ip ${alignr}${addr wlan0}
   net ip ${alignr}${execi 3600 wget -O - http://ip.tupeux.com | tail}
